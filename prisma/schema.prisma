datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String    @id @default(cuid())
  email                 String    @unique
  password              String    // hashed with bcrypt
  name                  String?
  address               String?
  emailVerified         Boolean   @default(false)
  emailVerificationToken String?  @unique
  tokenExpiresAt        DateTime?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // User role and account type
  role                  String    @default("homeowner") // homeowner, provider, agent, property_manager
  businessName          String?   // For providers, agents, property managers
  licenseNumber         String?   // For providers
  servicesOffered       String[]  @default([]) // For providers: ["HVAC", "Plumbing"]

  // Stripe subscription fields
  stripeCustomerId      String?   @unique
  stripeSubscriptionId  String?   @unique
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  subscriptionStatus    String?   // active, canceled, past_due, trialing
  currency              String?   @default("USD") // USD, EUR, GBP, AUD, NZD, CAD

  tasks         Task[]
  bookings      Booking[]
  properties    Property[]  // For property managers

  @@index([role])
  @@map("users")
}

model Task {
  id            String    @id @default(cuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  propertyId    String?   // For property managers/agents - which property is this task for?
  property      Property? @relation(fields: [propertyId], references: [id], onDelete: SetNull)

  title         String
  description   String?
  category      String    // HVAC, Plumbing, Electrical, Roofing, etc
  dueDate       DateTime
  completed     Boolean   @default(false)
  completedAt   DateTime?

  // Recurring maintenance
  isRecurring   Boolean   @default(false)
  recurringInterval String? // monthly, quarterly, biannual, annual
  nextDueDate   DateTime?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  bookings      Booking[]

  @@index([userId])
  @@index([propertyId])
  @@map("tasks")
}

model Provider {
  id            String    @id @default(cuid())
  name          String
  type          String    // HVAC, Plumbing, Electrical, Roofing, etc.
  phone         String?
  email         String?
  address       String
  rating        Float     @default(5)

  // Google Places integration
  googlePlaceId String?   @unique
  website       String?
  reviewCount   Int?      @default(0)
  latitude      Float?
  longitude     Float?
  photoUrl      String?

  // Location data
  city          String?
  country       String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  bookings      Booking[]

  @@index([type])
  @@index([googlePlaceId])
  @@index([city, type])
  @@map("providers")
}

model Booking {
  id            String    @id @default(cuid())
  taskId        String
  task          Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  providerId    String
  provider      Provider  @relation(fields: [providerId], references: [id])

  // Escalation support
  backupProviderIds String[] @default([]) // Array of provider IDs as fallbacks
  currentProviderIndex Int @default(0) // Which provider in the list we're currently trying
  escalationAttempts Int @default(0) // How many times we've escalated
  lastEscalatedAt DateTime? // When we last escalated to next provider

  scheduledDate DateTime
  status        String    @default("pending") // pending, confirmed, completed, escalated, failed
  providerResponseDeadline DateTime? // 24 hours from booking request
  notes         String?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
  @@index([taskId])
  @@index([status])
  @@index([providerResponseDeadline])
  @@map("bookings")
}

model EmailLog {
  id            String    @id @default(cuid())
  to            String
  subject       String
  body          String
  sentAt        DateTime  @default(now())

  @@map("email_logs")
}

model Property {
  id            String    @id @default(cuid())
  managerId     String    // User ID of property manager or real estate agent
  manager       User      @relation(fields: [managerId], references: [id], onDelete: Cascade)

  address       String
  city          String?
  state         String?
  zipCode       String?
  country       String?   @default("USA")

  propertyType  String?   // residential, commercial, apartment, condo
  units         Int       @default(1)  // For multi-unit properties

  ownerName     String?
  ownerEmail    String?
  ownerPhone    String?

  // Property-specific tasks
  tasks         Task[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([managerId])
  @@index([city])
  @@map("properties")
}
